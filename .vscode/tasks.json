{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cmake --build build --target visualizer_pcap",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build all",
      "type": "shell",
      "command": "cmake --build build",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "cmake --build build --target clean",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "run visualizer (AAPL)",
      "type": "shell",
      "command": "${workspaceFolder}/build/visualizer_pcap",
      "args": [
        "data/ny4-xnys-pillar-a-20230822T133000.pcap",
        "-t",
        "AAPL",
        "-s",
        "data/symbol_nyse_parsed.csv"
      ],
      "group": "test",
      "dependsOn": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "run visualizer (all symbols)",
      "type": "shell",
      "command": "${workspaceFolder}/build/visualizer_pcap",
      "args": [
        "data/ny4-xnys-pillar-a-20230822T133000.pcap",
        "-s",
        "data/symbol_nyse_parsed.csv"
      ],
      "group": "test",
      "dependsOn": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "build market_maker_sim",
      "type": "shell",
      "command": "cmake --build build --target market_maker_sim",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "run market maker (AAPL)",
      "type": "shell",
      "command": "${workspaceFolder}/build/market_maker_sim",
      "args": [
        "data/ny4-xnys-pillar-a-20230822T133000.pcap",
        "data/symbol_nyse_parsed.csv",
        "-t",
        "AAPL"
      ],
      "group": "test",
      "dependsOn": "build market_maker_sim",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "run market maker (all symbols)",
      "type": "shell",
      "command": "${workspaceFolder}/build/market_maker_sim",
      "args": [
        "data/ny4-xnys-pillar-a-20230822T133000.pcap",
        "data/symbol_nyse_parsed.csv"
      ],
      "group": "test",
      "dependsOn": "build market_maker_sim",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "run market maker (full day)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/run_full_day.sh",
      "group": "test",
      "dependsOn": "build market_maker_sim",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "run market maker (full day - trading hours)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/run_full_day.sh",
      "args": [
        "--trading-hours-only"
      ],
      "group": "test",
      "dependsOn": "build market_maker_sim",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "run market maker (full day - AAPL)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/run_full_day.sh",
      "args": [
        "-t",
        "AAPL",
        "--trading-hours-only"
      ],
      "group": "test",
      "dependsOn": "build market_maker_sim",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
